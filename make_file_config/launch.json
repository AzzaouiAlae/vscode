{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug My Program",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/So_long",  // Update with your binary name
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build with make file",
      "miDebuggerPath": "/usr/bin/gdb"  // Check with `which gdb`
    }
  ]
}
